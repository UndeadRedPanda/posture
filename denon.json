{
	"$schema": "https://deno.land/x/denon@2.4.7/schema.json",
	"allow": [
		"env",
		"net",
		"plugin",
		"read",
		"write"
	],
	"logger": {
		"fullscreen": true
	},
	"scripts": {
		"start": {
			"cmd": "app.ts",
			"desc": "Run alternator",
			"watch": true
		},
		"test": {
			"cmd": "test.ts",
			"desc": "Run tests",
			"watch": false
		}
	},
	"tsconfig": "tsconfig.json",
	"unstable": true,
	"watcher": {
		"skip": [
			"client/app/**/*",
			".vscode/**/*"
		]
	}
}